@inherits LayoutComponentBase

<FluentLayout>
    <FluentHeader>
        <a class="home-title-link" href="/">
            Xaberue's HospitalManager UI
        </a>
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu />
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>

    <FluentFooter>
        Contact us on our webpage <a href="https://www.dotnetbarcelona.com/"> here!</a>
        <FluentSpacer />
        <a href="https://github.com/xaberue">xaberue</a>
    </FluentFooter>
</FluentLayout>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
