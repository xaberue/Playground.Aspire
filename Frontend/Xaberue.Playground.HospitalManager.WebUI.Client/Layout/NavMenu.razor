@rendermode InteractiveAuto

<div class="navmenu">
    <input type="checkbox" title="Menu expand/collapse toggle" id="navmenu-toggle" class="navmenu-icon" />
    <label for="navmenu-toggle" class="navmenu-icon"><FluentIcon Value="@(new Icons.Regular.Size20.Navigation())" Color="Color.Fill" /></label>
    <nav class="sitenav" aria-labelledby="main-menu">
        <FluentNavMenu Id="main-menu" Collapsible="true" Width="250" Title="Navigation menu" @bind-Expanded="expanded" CustomToggle="true">
            <FluentNavLink Href="patients" Icon="@(new Icons.Regular.Size20.MoviesAndTv())" IconColor="Color.Accent">Patients</FluentNavLink>
            <FluentNavLink Href="doctors" Icon="@(new Icons.Regular.Size20.MoviesAndTv())" IconColor="Color.Accent">Doctors</FluentNavLink>
            <FluentNavLink Href="appointments" Icon="@(new Icons.Regular.Size20.Calendar())" IconColor="Color.Accent">Appointments</FluentNavLink>
            <FluentNavLink Href="appointment-registration" Icon="@(new Icons.Regular.Size20.NotepadPerson())" IconColor="Color.Accent">Register appointment</FluentNavLink>
            @* TODO: Remove this entry, move to a button in appointments view *@
        </FluentNavMenu>
    </nav>
</div>


@code {
    private bool expanded = true;
}
